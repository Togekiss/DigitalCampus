<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sanfe.digitalcampus">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:logo="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.StartApp.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.StartApp.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar"/>
        <activity
            android:name=".activities.StartApp.MenuActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Managers.SubjectManagerActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Creators.CreateSubject1Activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Creators.CreateSubject2Activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Creators.CreateSubject3Activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Show.ShowSubjectActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Managers.StudentManagerActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Creators.CreateStudentActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Show.ShowStudentActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Managers.ExamManagerActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Creators.CreateExamActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Creators.EditExamActivity"
            android:screenOrientation="portrait"/>
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


</manifest>
