<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/up"/>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_delete_black_48dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/down"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_keyboard_arrow_down_black_48dp"
        android:layout_toLeftOf="@id/delete"
        />

    <ImageView
        android:id="@id/up"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_keyboard_arrow_up_black_48dp"
        android:layout_toLeftOf="@id/down"/>


</RelativeLayout>