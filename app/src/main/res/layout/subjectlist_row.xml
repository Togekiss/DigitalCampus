<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/subjectmanager_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/app_icon"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/subjectmanager_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/subjectmanager_image"/>

    <TextView
        android:id="@+id/subjectmanager_text"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/app_name"
        android:textSize="15sp"
        android:layout_toRightOf="@id/subjectmanager_image"
        android:layout_below="@id/subjectmanager_title"
        android:maxLines="2"
        android:ellipsize="end"/>

    <Button
        android:id="@+id/subjectmanager_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>